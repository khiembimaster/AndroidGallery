<?xml version="1.0" encoding="utf-8"?>
<android21ktpm3.group07.androidgallery.ui.memories.widget.MovieBottomView
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/movie_bottom_bg"
    android:layout_width="match_parent"
    android:layout_height="@dimen/demo_bottom_height">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movie_transfer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ic_movie_transfer"
         app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="40dp" />
    <TextView
        android:id="@+id/movie_transfer_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/movie_transfer"
        app:layout_constraintRight_toRightOf="@id/movie_transfer"
        app:layout_constraintTop_toBottomOf="@id/movie_transfer"
        android:textColor="#FFFFFF"
        android:text="movie_transfer" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/movie_music"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:srcCompat="@drawable/ic_movie_music"
        app:layout_constraintLeft_toRightOf="@+id/movie_transfer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="60dp" />
    <TextView
        android:id="@+id/movie_music_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/movie_music"
        app:layout_constraintRight_toRightOf="@id/movie_music"
        app:layout_constraintTop_toBottomOf="@id/movie_music"
        android:textColor="#FFFFFF"
        android:text="movie_music" />

    <TextView
        android:id="@+id/movie_next"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="movie_next"
        android:textColor="#FFFFFF"
        android:minWidth="60dp"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:background="@drawable/movie_next_shape"
        />

</android21ktpm3.group07.androidgallery.ui.memories.widget.MovieBottomView>